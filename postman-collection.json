{
	"info": {
		"name": "Country Explorer API Tests",
		"description": "Comprehensive API testing collection for Country Explorer backend-frontend connection",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:5001",
			"type": "string"
		},
		{
			"key": "apiBase",
			"value": "{{baseUrl}}/api/v1",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Health & Status",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/health",
							"host": ["{{baseUrl}}"],
							"path": ["health"]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response has required fields', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('success');",
									"    pm.expect(jsonData).to.have.property('message');",
									"    pm.expect(jsonData).to.have.property('timestamp');",
									"    pm.expect(jsonData.success).to.be.true;",
									"});",
									"",
									"pm.test('Response time is less than 1000ms', function () {",
									"    pm.expect(pm.response.responseTime).to.be.below(1000);",
									"});"
								]
							}
						}
					]
				}
			]
		},
		{
			"name": "Countries API",
			"item": [
				{
					"name": "Get All Countries",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{apiBase}}/countries",
							"host": ["{{apiBase}}"],
							"path": ["countries"]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response has success flag', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('success');",
									"    pm.expect(jsonData.success).to.be.true;",
									"});",
									"",
									"pm.test('Response has data array', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('data');",
									"    pm.expect(jsonData.data).to.be.an('array');",
									"});",
									"",
									"pm.test('Response has pagination', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('pagination');",
									"    pm.expect(jsonData.pagination).to.have.property('page');",
									"    pm.expect(jsonData.pagination).to.have.property('limit');",
									"    pm.expect(jsonData.pagination).to.have.property('total');",
									"});"
								]
							}
						}
					]
				},
				{
					"name": "Get Countries with Pagination",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{apiBase}}/countries?page=1&limit=5",
							"host": ["{{apiBase}}"],
							"path": ["countries"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "5"
								}
							]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Returns exactly 5 countries', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData.data).to.have.lengthOf(5);",
									"});",
									"",
									"pm.test('Pagination reflects request', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData.pagination.page).to.equal(1);",
									"    pm.expect(jsonData.pagination.limit).to.equal(5);",
									"});"
								]
							}
						}
					]
				},
				{
					"name": "Search Countries",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{apiBase}}/countries/search?q=united",
							"host": ["{{apiBase}}"],
							"path": ["countries", "search"],
							"query": [
								{
									"key": "q",
									"value": "united"
								}
							]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Search results contain query term', function () {",
									"    const jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.length > 0) {",
									"        const hasQueryTerm = jsonData.data.some(country => ",
									"            country.name.common.toLowerCase().includes('united') ||",
									"            country.name.official.toLowerCase().includes('united')",
									"        );",
									"        pm.expect(hasQueryTerm).to.be.true;",
									"    }",
									"});"
								]
							}
						}
					]
				},
				{
					"name": "Get Country by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{apiBase}}/countries/1",
							"host": ["{{apiBase}}"],
							"path": ["countries", "1"]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Returns single country object', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('success');",
									"    pm.expect(jsonData).to.have.property('data');",
									"    pm.expect(jsonData.data).to.be.an('object');",
									"    pm.expect(jsonData.data).to.have.property('name');",
									"});"
								]
							}
						}
					]
				}
			]
		},
		{
			"name": "Error Handling",
			"item": [
				{
					"name": "Invalid Endpoint - 404",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{apiBase}}/invalid-endpoint",
							"host": ["{{apiBase}}"],
							"path": ["invalid-endpoint"]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Status code is 404', function () {",
									"    pm.response.to.have.status(404);",
									"});",
									"",
									"pm.test('Error response format', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('success');",
									"    pm.expect(jsonData.success).to.be.false;",
									"});"
								]
							}
						}
					]
				},
				{
					"name": "Invalid Country ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{apiBase}}/countries/999999",
							"host": ["{{apiBase}}"],
							"path": ["countries", "999999"]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Status code is 404', function () {",
									"    pm.response.to.have.status(404);",
									"});",
									"",
									"pm.test('Error message is present', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('error');",
									"});"
								]
							}
						}
					]
				}
			]
		},
		{
			"name": "Performance Tests",
			"item": [
				{
					"name": "Load Test - Multiple Requests",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{apiBase}}/countries?page=1&limit=10",
							"host": ["{{apiBase}}"],
							"path": ["countries"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "10"
								}
							]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Response time is acceptable', function () {",
									"    pm.expect(pm.response.responseTime).to.be.below(2000);",
									"});",
									"",
									"pm.test('Memory usage reasonable', function () {",
									"    const jsonData = pm.response.json();",
									"    const responseSize = JSON.stringify(jsonData).length;",
									"    pm.expect(responseSize).to.be.below(100000); // 100KB limit",
									"});"
								]
							}
						}
					]
				}
			]
		}
	]
}
